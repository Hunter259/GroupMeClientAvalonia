<UserControl x:Class="GroupMeClientAvalonia.Views.Controls.InlineReadSentMarkerControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="400">

  <Grid Background="{Binding MessageColor, Mode=OneTime}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock Text="{Binding LabelString, Mode=OneTime}"
           HorizontalAlignment="Left"
           FontWeight="Regular"
           FontSize="11"
           Foreground="#637182"
           Margin="55,-15,0,0"/>
  </Grid>
</UserControl>

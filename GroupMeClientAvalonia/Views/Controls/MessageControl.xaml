    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                Orientation="Vertical"
                Background="LightGray"
                Height="45"
                IsVisible="{Binding ShowDetails}">

      <!--Padding="20,0,0,0"
      ContentStringFormat="Sent: {0}"-->
      <TextBlock Text="{Binding SentTimeString}"
                 FontWeight="Regular"
                 FontSize="11"
                 Foreground="#637182"
                 />

      <!--ContentStringFormat="Client: {0}"
       Padding="20,0,0,0"-->
      <TextBlock Text="{Binding SenderPlatform}"
                 FontWeight="Regular"
                 FontSize="11"
                 Foreground="#637182"
                />
    </StackPanel>
  </Grid>
</UserControl>
